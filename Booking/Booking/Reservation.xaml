<UserControl x:Class="Booking.Reservation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Booking"
             mc:Ignorable="d" 
             
          Height="Auto"  Width="Auto" Grid.IsSharedSizeScope="True">
    <Grid x:Name="content">
        <Image x:Name="image" Source="Logomakr_646VVt.png" Grid.IsSharedSizeScope="True" HorizontalAlignment="Right" Width="128" Height="40" VerticalAlignment="Bottom" Margin="0,0,0,10"/>
        <DockPanel  LastChildFill="False" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}" Grid.IsSharedSizeScope="True" HorizontalAlignment="Left"  Width="87" AutomationProperties.IsOffscreenBehavior="Onscreen">
            <Button x:Name="home" Content="Home" Width="86" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrush}}" FontFamily="Times New Roman" Height="31" VerticalAlignment="Top" Foreground="Black" FontWeight="Normal" BorderThickness="0" Click="home_Click" />
        </DockPanel>
        <DockPanel Height="31" FlowDirection="LeftToRight" LastChildFill="False"  VerticalAlignment="Top" Background="{DynamicResource {x:Static SystemColors.GradientActiveCaptionBrushKey}}" Grid.IsSharedSizeScope="True" Margin="87,0,0,0">
            <Label x:Name="label5" Content="RESERVATION" Height="31" VerticalAlignment="Top"/>
        </DockPanel>
        <Button x:Name="Search" Content="Search" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrush}}" FontFamily="Times New Roman" RenderTransformOrigin="-0.477,1.452" Margin="0,31,0,0"  FontWeight="Normal" BorderThickness="0" Height="31" VerticalAlignment="Top" HorizontalAlignment="Left" Width="86" Click="search_Click">

        </Button>
        <Button x:Name="reservation" Content="Reservation" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrush}}" FontFamily="Times New Roman" RenderTransformOrigin="-0.477,1.452" Margin="0,62,0,0"  FontWeight="Normal" BorderThickness="0" Height="31" VerticalAlignment="Top" HorizontalAlignment="Left" Width="86" Click="reservation_Click" >

        </Button>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Margin="86,31,0,-5" Width="134"/>
        <DatePicker Margin="288,120,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="102"/>
        <DatePicker Margin="448,120,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="102"/>
        <Label x:Name="label" Content="Check-in" Margin="288,100,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="56"/>
        <Label x:Name="label1" Content="Check-out" Margin="448,100,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.394,-0.962" HorizontalAlignment="Left" Width="65"/>
        <ComboBox x:Name="comboBox" Margin="348,159,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="30"/>
        <Label x:Name="label2" Content="Rooms" Margin="302,155,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="46"/>
        <Label x:Name="label3" Content="Persons" Margin="462,155,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="51"/>
        <ComboBox x:Name="comboBox1" Margin="513,159,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="30"/>
        <ComboBox x:Name="comboBox2" Margin="289,62,0,0" RenderTransformOrigin="0.5,0.5" Height="22" VerticalAlignment="Top" HorizontalAlignment="Left" Width="262">
            <ComboBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.142"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ComboBox.RenderTransform>
        </ComboBox>
        <Label x:Name="label4" Content="Hotel" Margin="288,36,0,0" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left" Width="39"/>
        <Button x:Name="button" Content="Reserve" HorizontalAlignment="Left" Margin="476,206,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="addHotel" Content="Add hotel" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrush}}" FontFamily="Times New Roman" VerticalAlignment="Bottom" Height="41" Width="87" RenderTransformOrigin="-0.477,1.452"  FontWeight="Normal" BorderThickness="0" HorizontalAlignment="Left" Click="addHotel_Click" />
    </Grid>
</UserControl>
